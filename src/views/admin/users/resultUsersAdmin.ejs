<!DOCTYPE html>
<%-include("../partials/headAdmin")%> 
<body>
    <%-include("../partials/headerAdmin")%>

    <main>
        <article class="art-title">
            <h2>
                <%=postHeader%>
            </h2>
            <hr>
        </article>
        <article>
            <button class="btn-add">
                <a href="/admin/usuarios/agregar">
                    <i class="fa-solid fa-plus"></i> Nuevo Usuario
                </a>
            </button>
        </article>
        <article class="art-search">
            <form action="/admin/usuarios/buscar" method="get">
                <input type="text" name="search" id="search" placeholder="Buscar Usuario">
                <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
            </form>
        </article>

        <article class="container-fluid">
            <table class="table table-striped table-hover">
                <thead>
                  <tr class="text-center">
                    <th scope="col">id</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Rol</th>
                    <th scope="col"></th>
                  </tr>
                </thead>
                <tbody>
                    <% usuarios.forEach(usuario => { %>
                        <tr class="text-center">
                            <th scope="row"><%=usuario.id%></th>
                            <td class="texto-corto"><%=usuario.name%></td>
                            <td>$<%=usuario.price%></td>

                            <td class="btn-edit">
                              <a href="/admin/usuarios/editar/<%- usuario.id %>" class="btn btn-success">
                                <i class="fa-solid fa-pen-to-square"></i>
                              </a>
                              <form action="/admin/usuarios/eliminar/<%- usuario.id %>?_method=DELETE" method="POST">
                                <button class="btn btn-danger" type="submit">
                                  <i class="fa-solid fa-trash-can"></i>
                                </button>
                              </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
              </table>
        </article>

        <a href="/" class="backToHome">Salir del administrador</a>
    </main>

    <%-include("../partials/footerAdmin")%>
</body>
</html>